@{
    Layout = null;
}

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<div class="modal-header">
    <h5 class="modal-title" id="friendListModalLabel">Friend List</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    @foreach (var friend in ViewBag.AllFriends)
            {
                <div class="d-flex justify-content-between align-items-center border-top border-bottom p-1">
                    <p class="m-0">
                        <img src="@(Configuration["Api"] + friend.Image.Path)" alt="image" class = "img-thumbnail rounded-circle flex-shrink-0 me-1" style="width: 49px; height: 49px; object-fit: cover;">
                        @friend.UserName
                    </p>
                    @Html.ActionLink(
                            "Delete Friend",
                            "DeleteFriend",
                            "Account",
                            new {
                                userId = @friend.Id
                            },
                            new Dictionary<string, object>{
                                {"class","btn btn-primary"}
                            }

                    )
                </div>
            }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>