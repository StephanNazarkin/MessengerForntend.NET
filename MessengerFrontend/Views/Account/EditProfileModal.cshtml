@{
    Layout = null;
}
@model MessengerFrontend.Models.Users.UserUpdateModel

<div class="modal-header">
    <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-action="UpdateUser" asp-controller="Account" method="post">
<div class="modal-body">

        @Html.Hidden("Id", (object)ViewBag.CurrentUser.Id)
        <div class="form-outline mb-4">
            <input asp-for="UserName" type="text" class="form-control form-control-lg" id="userNameInput" value=@ViewBag.CurrentUser.UserName/>
            <label asp-for="UserName" class="form-label">New User Name</label>
        </div>

        <div class="form-outline mb-4">
            <input asp-for="Email" type="email" class="form-control form-control-lg" id="emailInput" value=@ViewBag.CurrentUser.Email/>
            <label asp-for="Email" class="form-label">New Email</label>
        </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Save changes</button>
</div>
</form>
