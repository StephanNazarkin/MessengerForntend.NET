@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="chatMembersModalLabel">Members</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    @foreach (var userAccount in Model)
    {
        <div class="d-flex justify-content-between align-items-center border-top border-bottom p-1" style="height: 46px;">
            <p class="m-0">
                @if (userAccount.IsAdmin)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                }
                @if (userAccount.IsBanned)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-volume-mute-fill" viewBox="0 0 16 16">
                        <path d="M6.717 3.55A.5.5 0 0 1 7 4v8a.5.5 0 0 1-.812.39L3.825 10.5H1.5A.5.5 0 0 1 1 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06zm7.137 2.096a.5.5 0 0 1 0 .708L12.207 8l1.647 1.646a.5.5 0 0 1-.708.708L11.5 8.707l-1.646 1.647a.5.5 0 0 1-.708-.708L10.793 8 9.146 6.354a.5.5 0 1 1 .708-.708L11.5 7.293l1.646-1.647a.5.5 0 0 1 .708 0z"/>
                    </svg>
                }

                @userAccount.User.UserName
            </p>
            <div>
                @if (@userAccount.Id != ViewBag.CurrentUserAccount.Id)
                {
                    @if (!userAccount.IsAdmin && ViewBag.CurrentUserAccount.IsOwner && userAccount.Id != ViewBag.CurrentUserAccount.Id)
                    {
                        @Html.ActionLink("Set Admin", "SetAdmin", "Chat", 
                            new {userAccountId = @userAccount.Id},
                            new Dictionary<string, object>{{"class", "btn btn-success m-1" }}
                            )
                    } else if (userAccount.IsAdmin && ViewBag.CurrentUserAccount.IsOwner)
                    {
                        @Html.ActionLink("Unset Admin", "UnsetAdmin", "Chat", 
                            new {userAccountId = @userAccount.Id},
                            new Dictionary<string, object>{{"class", "btn btn-success m-1" }}
                            )
                    }

                    @if (ViewBag.CurrentUserAccount.IsAdmin && !userAccount.IsAdmin && userAccount.Id != ViewBag.CurrentUserAccount.Id)
                    {
                        @Html.ActionLink("Kick", "KickUser", "Chat", 
                            new {userAccountId = @userAccount.Id},
                            new Dictionary<string, object>{{"class", "btn btn-warning m-1" }}
                            )

                        @if (!userAccount.IsBanned)
                        {
                            @Html.ActionLink("Mute", "MuteUser", "Chat", 
                            new {userAccountId = @userAccount.Id},
                            new Dictionary<string, object>{{"class", "btn btn-danger m-1" }}
                            )
                        } else
                        {
                            @Html.ActionLink("Unmute", "UnmuteUser", "Chat", 
                            new {userAccountId = @userAccount.Id},
                            new Dictionary<string, object>{{"class", "btn btn-danger m-1" }}
                            )
                        }
                    }
                }
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>