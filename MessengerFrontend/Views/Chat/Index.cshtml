@{
    ViewData["Title"] = "Chat Title";
    Layout = ViewBag.Layout;
}
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<div class="chat-wrapper" id="chat-page">
    <div class="chat-header border-bottom p-2 d-flex justify-content-between align-items-center shadow-lg" style="height: 65px;">
        <div class="chat-title d-flex align-items-center">

            @if (ViewBag.CurrentUserAccount.IsOwner)
            {
                <a href="~/Chat/EditChat/@Model.Id" data-bs-toggle="modal" data-bs-target="#modal" class="modal-link"></a>
            }
            <img src="@(Configuration["Api"] + Model.Image.Path)" alt="image" class = "img-thumbnail rounded-circle flex-shrink-0 me-1" style="width: 49px; height: 49px; object-fit: cover;">
            <div class="chat-info">
                <h5 class="mb-1">@Model.Topic</h5>
                <p class="m-0" style="font-size: 14px;">@ViewBag.Members.Count members</p>
            </div>
        </div>

        <div class="chat-actions d-flex">

            <div class="chat-action-item ms-4">
                <a href="~/Chat/InviteFriend/@Model.Id" data-bs-toggle="modal" data-bs-target="#modal" class="fs-2 modal-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                    </svg>
                </a>
            </div>

            <div class="chat-action-item ms-4">
                <a href="~/Chat/GetMembers/@Model.Id" data-bs-toggle="modal" data-bs-target="#modal" class="fs-2 modal-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                        <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816zM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275zM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4z"/>
                    </svg>
                </a>
            </div>

            @if (!ViewBag.CurrentUserAccount.IsOwner)
            {
                <div class="chat-action-item ms-4">
                    <a href="~/Chat/LeaveChat/@Model.Id" class="fs-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z"/>
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                        </svg>
                    </a>
                </div>
            }

        </div>
    </div>
    <div class="messages-wrapper" >
        <div class="messages-list px-3">
            @foreach (var message in ViewBag.Messages)
            {
                <div class="message @(message.User.Id != ViewBag.CurrentUserAccount.User.Id?"message-them":"message-me") ">
                    @if (message.User.Id == ViewBag.CurrentUserAccount.User.Id)
                    {
                        <a href="~/Message/Index/@message.Id?chatId=@Model.Id" data-bs-toggle="modal" data-bs-target="#modal" class="modal-link"></a>
                    }
                    <div class="d-flex align-items-center mb-2">
                        <img src="@(Configuration["Api"] + message.User.Image.Path)" alt="image" class = "img-thumbnail rounded-circle flex-shrink-0 me-1" style="width: 40px; height: 40px; object-fit: cover;">
                        <p class="from ms-1">@message.User.UserName</p>
                    </div>
                    @if (message.Images is not null)
                    {
                        <div class="images">
                            @foreach (var image in message.Images)
                            {
                                <div class="image-item">
                                    <img src="@(Configuration["Api"] + image.Path)" alt="image">
                                </div>
                            }
                        </div>
                    }
                    <p>@message.Text</p>
                </div>
            }
        </div>
    </div>
    @if (ViewBag.CurrentChat.IsAdminsRoom && ViewBag.IsUserAdmin)
    {
        <form asp-controller="Message" asp-action="SendAdminsMessage" method="post" enctype="multipart/form-data">
            @Html.Hidden("ChatId", (object)Model.Id)
            <div class="input-group input-group-lg border">
                <label class="attachment btn .bg-transparent" style="box-shadow: none; border: none;">
                    <input type="file" name="files" accept="image/*" style="display: none;" multiple>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-paperclip" viewBox="0 0 16 16">
                        <path d="M4.5 3a2.5 2.5 0 0 1 5 0v9a1.5 1.5 0 0 1-3 0V5a.5.5 0 0 1 1 0v7a.5.5 0 0 0 1 0V3a1.5 1.5 0 1 0-3 0v9a2.5 2.5 0 0 0 5 0V5a.5.5 0 0 1 1 0v7a3.5 3.5 0 1 1-7 0V3z"/>
                    </svg>
                </label>
                <input class="form-control rounded-0" autofocus name="text" autocomplete="off" placeholder="Message..." type="text" style="box-shadow: none; border: none;">
                <button class="btn rounded-0 .bg-transparent" type="submit" id="button-addon2" style="box-shadow: none; border: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16" style="width: 25px; height: 25px;">
                        <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z"/>
                    </svg>
                </button>
            </div>
        </form>
    }
    @if (ViewBag.CurrentChat.IsAdminsRoom && !ViewBag.IsUserAdmin)
    {
        
    }
    @if (!ViewBag.CurrentChat.IsAdminsRoom)
    {
        <form asp-controller="Message" asp-action="SendMessage" method="post" enctype="multipart/form-data">
          @Html.Hidden("ChatId", (object)Model.Id)
          <div class="input-group input-group-lg border">
              <label class="attachment btn .bg-transparent" style="box-shadow: none; border: none;">
                  <input type="file" name="files" accept="image/*" style="display: none;" multiple @(ViewBag.CurrentUserAccount.IsBanned ? "disabled":"")>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-paperclip" viewBox="0 0 16 16">
                      <path d="M4.5 3a2.5 2.5 0 0 1 5 0v9a1.5 1.5 0 0 1-3 0V5a.5.5 0 0 1 1 0v7a.5.5 0 0 0 1 0V3a1.5 1.5 0 1 0-3 0v9a2.5 2.5 0 0 0 5 0V5a.5.5 0 0 1 1 0v7a3.5 3.5 0 1 1-7 0V3z"/>
                  </svg>
              </label>
              <input class="form-control rounded-0" autofocus name="text" @(ViewBag.CurrentUserAccount.IsBanned ? "disabled placeholder=Muted" : "placeholder=Message...") autocomplete="off" type="text" style="box-shadow: none; border: none;">
              <button class="btn rounded-0 .bg-transparent" type="submit" id="button-addon2" style="box-shadow: none; border: none;">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16" style="width: 25px; height: 25px;">
                      <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z"/>
                  </svg>
              </button>
          </div>
        </form>
    }
</div>
