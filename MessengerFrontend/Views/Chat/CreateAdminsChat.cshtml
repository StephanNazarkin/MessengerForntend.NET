@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="inviteFriendModalLabel">Create Notification Room</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-controller="Chat" asp-action="CreateAdminsChat" method="post" enctype="multipart/form-data">

        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupFile01">Image</label>
            <input type="file" name="File" class="form-control" id="inputGroupFile01" accept="image/*">
        </div>

        <div class="form-outline mb-4">
            <label class="form-label">Topic</label>
            <input type="text" name="Topic" class="form-control form-control-lg" />
        </div>

        <div class="d-flex justify-content-center">
            <input type="submit" class="btn btn-primary" value="Create notification room"/>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>